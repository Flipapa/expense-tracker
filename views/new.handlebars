<div class="container col-8 mt-3 mb-5 py-2">
  <div class="d-flex justify-content-center align-items-baseline mb-3">
    <h4 class="mr-3">請輸入支出</h4>
    <small class="text-muted">
      *必填欄位
    </small>
  </div>
  <form action="/records" method="POST" class="needs-validation" novalidate>
    <div class="form-group row justify-content-center mb-3">
      <label class="col-12 col-sm-auto col-form-label col-form-label-lg" for="name">名稱*：</label>
      <div class="col-sm-8 p-0">
        <input class="form-control form-control-lg" type="text" name="name" id="name" placeholder="請輸入名稱" required>
        <div class="invalid-feedback">
          請輸入消費名稱！
        </div>
      </div>
    </div>
    <div class="form-group row justify-content-center mb-3">
      <label class="col-12 col-sm-auto col-form-label col-form-label-lg" for="date">日期*：</label>
      <div class="col-sm-8 p-0">
        <input class="form-control form-control-lg" type="date" name="date" id="name" placeholder="請輸入日期" value=""
          pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" required>
        <div class="invalid-feedback">
          請輸入消費日期！ ex: YYYY-MM-DD
        </div>
      </div>
    </div>
    <div class="form-group row justify-content-center mb-3">
      <label class="col-12 col-sm-auto col-form-label col-form-label-lg" for="category">類別*：</label>
      <div class="col-sm-8 p-0">
        <select class="custom-select custom-select-lg" name="category" id="category" required>
          <option selected disabled value="">請選擇類別</option>
          {{#each categoryList}}
          <option value={{this.name}}>{{this.name}}</option>
          {{/each}}
        </select>
        <div class="invalid-feedback">
          請選擇一個消費類別！
        </div>
      </div>
    </div>
    <div class="form-group row justify-content-center mb-3">
      <label class="col-12 col-sm-auto col-form-label col-form-label-lg" for="amount">金額*：</label>
      <div class="col-sm-8 p-0">
        <input class="form-control form-control-lg" type="number" name="amount" id="amount" min="0" placeholder="請輸入金額"
          required>
        <div class="invalid-feedback">
          請輸入消費金額！
        </div>
      </div>
    </div>
    <div class="form-group row justify-content-center mb-5">
      <label class="col-12 col-sm-auto col-form-label col-form-label-lg text-sm-right" for="shop">店家 ：</label>
      <div class="col-sm-8 p-0">
        <input class="form-control form-control-lg" type="text" name="shop" id="shop" placeholder="請輸入消費店家">
      </div>
    </div>
    <div class="row justify-content-center mb-5">
      <button class="btn btn-info btn-block col-6" type="submit">新增支出</button>
    </div>
  </form>
</div>